@model _2018._08._25_Projekt.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="wrapper">
    <div class="contact-form">
        <div class="input-fields">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = "Vezetéknév" })

                @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = "Keresztnév" })

                @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = "E-mail" })

                @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = "Telefonszám" })

                @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = "OM-kód" })

                @Html.PasswordFor(m => m.Password, new { @class = "input", placeholder = "Jelszó" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input" , placeholder = "Jelszó megerősitése" })
              

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Regisztrálok" />
                    </div>
                </div>


            }
        </div>
        <div class="reg">
            <br>
            <center><img src="~/Content/logmein.png" class="img"></center>
            <br>
            <br>
            <center><img src="~/Content/gepeszlogo.png"></center>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
